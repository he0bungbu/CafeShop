<Window x:Class="CafeShop.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="250" Width="525"
        WindowStartupLocation="CenterScreen"
        Background="Orange" Closing="Window_Closing_1">
    
    <Grid>
        <GroupBox Header="Thông tin đăng nhập :" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" Height="200" Width="300">
            <StackPanel HorizontalAlignment="Left" Height="178" VerticalAlignment="Top" Width="288">
                <Label Content="---Tên đăng nhập---" Margin="0,0,79,2" HorizontalAlignment="Right" Width="124"/>
                <TextBox Height="25" TextWrapping="Wrap" Name="txtUsername" Text="admin"/>
                <Label Content="---Mật khẩu---" Margin="100,0,100,2"/>
                <PasswordBox Height="25" Name="pwbPassword" Password="123"/>
                <Button Content="ĐĂNG NHẬP" Margin="30,10,30,0" Background="Orange" FontWeight="Bold" BorderBrush="Orange" Click="btnLogin_Click"/>
                <Button Content="THOÁT" Margin="30,5,30,0" Background="Orange" FontWeight="Bold" BorderBrush="Orange" Click="btnExit_Click"/>
            </StackPanel>
        </GroupBox>
        <Image HorizontalAlignment="Left" Height="190" Margin="10,19,0,0" VerticalAlignment="Top" Width="192" Source="Img\logo.jpg"/>

    </Grid>
</Window>
